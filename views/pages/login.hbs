<div class="container mx-auto mt-10 w-1/2 p-10 shadow-[2px_2px_10px_10px_rgba(0,0,0,0.16)] rounded-lg">
  <h1 class="text-2xl font-bold pb-5">Login with Us</h1>

  <form method="post" action="/user/login">
    <!-- Email Input -->
    <div class="mb-6">
      <label for="exampleInputEmail1" class="block text-sm font-medium text-gray-700">Email address</label>
      <input
        type="email"
        class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
        id="exampleInputEmail1"
        name="email"
        aria-describedby="emailHelp"
      />
      <div id="emailHelp" class="mt-2 text-sm text-gray-500">We'll never share your email with anyone else.</div>
    </div>

    <!-- Password Input -->
    <div class="mb-6">
      <label for="exampleInputPassword1" class="block text-sm font-medium text-gray-700">Password</label>
      <input
        type="password"
        class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
        id="exampleInputPassword1"
        name="password"
      />
    </div>

    <!-- Checkbox -->
    <div class="mb-6">
      <div class="flex items-center">
        <input
          type="checkbox"
          class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
          id="exampleCheck1"
          required
        />
        <label for="exampleCheck1" class="ml-2 block text-sm text-gray-900">
          I agree with the site's privacy policy and user agreement
        </label>
      </div>
    </div>

    <!-- Submit Button -->
    <button
      type="submit"
      class="w-full px-4 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
    >
      Submit
    </button>

    <!-- Error Message -->
    {{#if ErrorMessage}}
      <p class="mt-5 text-sm text-red-600">Warning: {{ErrorMessage}}</p>
    {{/if}}

    <!-- Success Message -->
    {{#if SuccessMessage}}
      <p class="mt-5 text-sm text-green-600">{{SuccessMessage}}</p>
    {{/if}}
  </form>
</div>